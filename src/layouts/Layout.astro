---
import "../styles/global.css";

const siteTitle = "Designers' Cafe | Brewing Connections, One Cup at a Time";
const siteDescription = "Experience the perfect blend of creativity and coffee at Designers' Cafe in Taguig. Specialty drinks, creative atmosphere, and a community for designers and creatives.";
const siteKeywords = "coffee shop taguig, designers cafe, specialty coffee, creative space, pembo cafe, coffee delivery taguig";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteTitle}</title>
    <!-- SEO Meta Tags -->
    <meta name="description" content={siteDescription} />
    <meta name="keywords" content={siteKeywords} />
    <meta name="author" content="Designers' Cafe" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="rating" content="general" />
    <meta name="revisit-after" content="1 days" />
    <meta name="language" content="en" />
    <meta name="geo.region" content="PH-00" />
    <meta name="geo.placename" content="Taguig, Metro Manila" />
    <meta name="geo.position" content="14.542881;121.059780" />
    <meta name="ICBM" content="14.542881, 121.059780" />
    <link rel="canonical" href="https://designerscafe.ph/" />
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:url" content="https://designerscafe.ph" />
    <meta property="og:site_name" content="Designers' Cafe" />
    <meta property="og:image" content="https://designerscafe.ph/assets/logo.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_PH" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={siteDescription} />
    <meta name="twitter:image" content="https://designerscafe.ph/assets/logo.png" />
    <meta name="twitter:site" content="@designerscafe" />
    <!-- Local Business Schema -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "CafeOrCoffeeShop",
      "name": "Designers' Cafe",
      "description": "A creative sanctuary in Taguig where coffee culture and design inspiration blend together. Specialty drinks, creative workspace, and friendly staff.",
      "url": "https://designerscafe.ph",
      "telephone": "+639615235176",
      "priceRange": "₱₱",
      "servesCuisine": ["Coffee", "Light Meals", "Pastries"],
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "65 Sampaguita St. Corner Umbel",
        "addressLocality": "Taguig",
        "addressRegion": "Metro Manila",
        "postalCode": "1630",
        "addressCountry": "PH"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 14.542881,
        "longitude": 121.059780
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday"],
          "opens": "15:00",
          "closes": "23:00"
        }
      ],
      "image": "https://designerscafe.ph/assets/logo.png",
      "logo": "https://designerscafe.ph/assets/logo.png",
      "sameAs": [
        "https://www.facebook.com/designerscafe",
        "https://www.instagram.com/designerscafe"
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "bestRating": "5",
        "worstRating": "1",
        "ratingCount": "125"
      }
    }
    </script>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <!-- Fonts and Resource Preloading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com" />
    <link rel="dns-prefetch" href="https://cdn.tailwindcss.com" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <!-- GSAP CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/TextPlugin.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollToPlugin.min.js"></script>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
   
    <style>
      /* Custom animations */
      @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
      }
      @keyframes pulse-glow {
        0% { box-shadow: 0 0 5px rgba(212, 148, 58, 0.5); }
        100% { box-shadow: 0 0 20px rgba(212, 148, 58, 0.8), 0 0 40px rgba(212, 148, 58, 0.3); }
      }
      @keyframes draw {
        0% { stroke-dashoffset: 1000; }
        100% { stroke-dashoffset: 0; }
      }
      .text-gradient {
        background: linear-gradient(135deg, #D4943A, #8B4B1A);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      .glass-morphism {
        background: rgba(248, 244, 240, 0.25);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(248, 244, 240, 0.18);
      }
      .pencil-cursor {
        cursor: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="%23D4943A" stroke-width="2"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/></svg>') 12 12, auto;
      }
      .scroll-indicator {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, #D4943A, #8B4B1A);
        transform-origin: left;
        z-index: 9999;
      }
      
      /* Enhanced animation utilities */
      .enhanced-reveal {
        opacity: 0;
        transform: translateY(30px);
      }
      
      .enhanced-scale {
        transform: scale(0.8);
        opacity: 0;
      }
      
      .enhanced-rotate {
        transform: rotate(-10deg);
        opacity: 0;
      }
      
      /* Smooth transitions for all interactive elements */
      button, .menu-item, .gallery-item, .barista-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }
      
      /* Perspective for 3D effects */
      section {
        transform-style: preserve-3d;
      }
    </style>
  </head>
  <body class="font-sans bg-cream text-coffee-900 overflow-x-hidden pencil-cursor">
    <!-- Scroll Progress Indicator -->
    <div id="scroll-progress" class="scroll-indicator" style="transform: scaleX(0);"></div>
    
    <!-- Loading Screen -->
    <div id="loader" class="fixed inset-0 bg-white z-50 flex items-center justify-center transition-opacity duration-500">
      <div class="text-center">
        <div class="w-16 h-16 border-4 border-[var(--pencil)] border-t-transparent rounded-full animate-spin mb-4 mx-auto"></div>
        <p class="text-[var(--coffee-900)] font-medium">Brewing your experience...</p>
      </div>
    </div>
    
    <!-- Immediate fallback script -->
    <script>
      // Multiple fallbacks to ensure loader disappears
      let loaderHidden = false;
      
      function hideLoaderFallback() {
        if (loaderHidden) return;
        loaderHidden = true;
        const loader = document.getElementById('loader');
        if (loader) {
          loader.style.opacity = '0';
          setTimeout(() => {
            loader.style.display = 'none';
            loader.remove(); // Remove from DOM completely
          }, 500);
        }
      }
      
      // Hide after 2 seconds maximum
      setTimeout(hideLoaderFallback, 2000);
      
      // Also hide on any user interaction
      document.addEventListener('click', hideLoaderFallback);
      document.addEventListener('keydown', hideLoaderFallback);
      document.addEventListener('scroll', hideLoaderFallback);
    </script>
    <slot />
  </body>
</html>