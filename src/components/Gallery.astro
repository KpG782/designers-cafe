    <style>
        :root {
            --coffee-900: #2D1B12;
            --coffee-600: #8B4513;
            --pencil: #FFD700;
            --cream: #FFF8DC;
            --font-serif: 'Georgia', serif;
            --font-sans: 'Arial', sans-serif;
        }

        @keyframes fade-in-up {
            from { 
                opacity: 0; 
                transform: translateY(32px) scale(0.95);
            }
            to { 
                opacity: 1; 
                transform: translateY(0) scale(1);
            }
        }
        
        @keyframes fade-in-scale {
            from { 
                opacity: 0; 
                transform: scale(0.8);
            }
            to { 
                opacity: 1; 
                transform: scale(1);
            }
        }
        
        .animate-fade-in-up {
            animation: fade-in-up 0.8s cubic-bezier(.4,0,.2,1) both;
        }
        
        .animate-fade-in-scale {
            animation: fade-in-scale 0.8s cubic-bezier(.4,0,.2,1) both;
        }
        
        .gallery-item {
            transition: all 0.3s ease;
        }
        
        .gallery-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        .gallery-item img {
            transition: transform 0.7s ease;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

        /* Responsive Flexbox Grid with Wrap */
        .gallery-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            width: 100%;
            justify-content: center;
        }

        /* Mobile First - 2 columns */
        @media (max-width: 639px) {
            .gallery-item {
                flex: 1 1 calc(50% - 0.5rem);
                min-width: 150px;
                height: 200px;
            }
            .gallery-item:first-child {
                flex: 1 1 100%;
                height: 250px;
            }
        }

        /* Small tablets - 3 columns */
        @media (min-width: 640px) and (max-width: 767px) {
            .gallery-item {
                flex: 1 1 calc(33.333% - 0.67rem);
                min-width: 180px;
                height: 200px;
            }
            .gallery-item:first-child {
                flex: 1 1 calc(66.666% - 0.33rem);
                height: 280px;
            }
            .gallery-item:nth-child(7) {
                flex: 1 1 100%;
                height: 180px;
            }
        }

        /* Medium screens - 4 columns */
        @media (min-width: 768px) and (max-width: 1023px) {
            .gallery-item {
                flex: 1 1 calc(25% - 0.75rem);
                min-width: 160px;
                height: 220px;
            }
            .gallery-item:first-child {
                flex: 1 1 calc(50% - 0.5rem);
                height: 300px;
            }
            .gallery-item:nth-child(6),
            .gallery-item:nth-child(7) {
                flex: 1 1 calc(50% - 0.5rem);
                height: 200px;
            }
        }

        /* Large screens - 5 columns */
        @media (min-width: 1024px) and (max-width: 1279px) {
            .gallery-item {
                flex: 1 1 calc(20% - 0.8rem);
                min-width: 180px;
                height: 240px;
            }
            .gallery-item:first-child {
                flex: 1 1 calc(40% - 0.6rem);
                height: 320px;
            }
            .gallery-item:nth-child(7) {
                flex: 1 1 calc(60% - 0.4rem);
                height: 200px;
            }
            .gallery-item:nth-child(9) {
                flex: 1 1 calc(40% - 0.6rem);
                height: 220px;
            }
        }

        /* Extra large screens - 6 columns */
        @media (min-width: 1280px) {
            .gallery-item {
                flex: 1 1 calc(16.666% - 0.83rem);
                min-width: 200px;
                height: 260px;
            }
            .gallery-item:first-child {
                flex: 1 1 calc(33.333% - 0.67rem);
                height: 350px;
            }
            .gallery-item:nth-child(2) {
                flex: 1 1 calc(16.666% - 0.83rem);
                height: 350px;
            }
            .gallery-item:nth-child(7) {
                flex: 1 1 calc(50% - 0.5rem);
                height: 200px;
            }
            .gallery-item:nth-child(8) {
                flex: 1 1 calc(16.666% - 0.83rem);
                height: 320px;
            }
            .gallery-item:nth-child(9) {
                flex: 1 1 calc(33.333% - 0.67rem);
                height: 220px;
            }
        }

        /* Ensure all items fill their containers */
        .gallery-item {
            position: relative;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            background: #f9fafb;
        }

        .gallery-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
        }

        /* Auto-wrap utility for better space filling */
        @media (max-width: 479px) {
            .gallery-grid {
                gap: 0.5rem;
            }
            .gallery-item {
                flex: 1 1 calc(50% - 0.25rem);
                min-width: 140px;
                height: 180px;
            }
            .gallery-item:first-child {
                flex: 1 1 100%;
                height: 200px;
            }
        }
    </style>
</head>
