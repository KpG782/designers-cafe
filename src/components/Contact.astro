---

const baristas = [
  {
    name: "Sarah M.",
    role: "Head Barista",
    desc: "Passionate about coffee and design, Sarah crafts every cup with creativity and care.",
    img: "/public/assets/barista1.jpg"
  },
  {
    name: "Miguel R.",
    role: "Latte Artist",
    desc: "Miguel brings art to every latte, making your coffee experience memorable.",
    img: "/public/assets/barista2.jpg"
  },
  {
    name: "Jasmine T.",
    role: "Brew Specialist",
    desc: "Jasmine loves experimenting with blends and flavors for the perfect brew.",
    img: "/public/assets/barista3.jpg"
  }
];
---

<section class="py-20" id="barista" style="background: var(--coffee-900); color: var(--cream);">
  <div class="container mx-auto px-6 text-center relative z-10">
    <h2 class="text-4xl md:text-5xl font-serif font-bold mb-8 barista-animate" style="color: var(--cream); font-family: var(--font-serif); opacity:0;">
      Meet the <span style="color: var(--pencil);">Baristas</span>
    </h2>
    <p class="text-lg md:text-xl max-w-2xl mx-auto mb-12 barista-animate" style="color: var(--coffee-100); font-family: var(--font-sans); opacity:0;">
      Our team of passionate baristas is dedicated to making every cup a creative experience. Get to know the people behind your favorite drinks!
    </p>
    <div class="flex flex-wrap justify-center gap-8 mb-12">
      {baristas.map((barista, i) => (
        <div class="barista-card bg-[var(--coffee-800)] rounded-2xl shadow-lg p-8 max-w-xs w-full barista-animate" style={`opacity:0; animation-delay:${0.2 + i * 0.15}s;`} key={barista.name}>
          <img src={barista.img} alt={barista.name} class="w-24 h-24 rounded-full mx-auto mb-4 object-cover border-4" style="border-color: var(--pencil); background: var(--coffee-700);" />
          <h3 class="text-xl font-bold mb-2" style="color: var(--cream); font-family: var(--font-serif);">{barista.name}</h3>
          <p class="text-base font-semibold mb-2" style="color: var(--pencil); font-family: var(--font-sans);">{barista.role}</p>
          <p class="text-sm mb-2" style="color: var(--coffee-100); font-family: var(--font-sans);">{barista.desc}</p>
        </div>
      ))}
    </div>
    <div class="max-w-2xl mx-auto barista-animate" style="opacity:0;">
      <div class="glass-morphism p-8 rounded-2xl" style="background: var(--coffee-800); color: var(--cream);">
        <blockquote class="text-xl italic mb-4" style="color: var(--cream); font-family: var(--font-serif);">
          "The perfect blend of great coffee and creative energy. This is where our best ideas come to life!"
        </blockquote>
        <cite class="font-semibold" style="color: var(--pencil); font-family: var(--font-sans);">- The Designers' Cafe Team</cite>
      </div>
    </div>
  </div>
</section>
<style>
  @keyframes fade-in-up {
    from { opacity: 0; transform: translateY(32px);}
    to { opacity: 1; transform: translateY(0);}
  }
  .barista-animate {
    animation: fade-in-up 0.7s cubic-bezier(.4,0,.2,1) both;
  }
  .barista-card {
    transition: box-shadow 0.3s, transform 0.3s;
  }
  .barista-card:hover {
    box-shadow: 0 8px 32px 0 var(--coffee-700, #6B3614);
    transform: translateY(-8px) scale(1.03);
  }
</style>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const baristaSection = document.getElementById('barista');
    const baristaAnimates = baristaSection?.querySelectorAll('.barista-animate');
    let animated = false;

    function animateBarista() {
      if (animated || !baristaAnimates) return;
      baristaAnimates.forEach((el, i) => {
        setTimeout(() => {
          el.style.opacity = 1;
          el.classList.add('barista-animate');
        }, i * 150);
      });
      animated = true;
    }

    function handleIntersect(entries, observer) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateBarista();
          observer.disconnect();
        }
      });
    }

    if (baristaSection) {
      const observer = new window.IntersectionObserver(handleIntersect, {
        threshold: 0.2
      });
      observer.observe(baristaSection);
    }
  });
</script>
     