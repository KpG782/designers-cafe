<style>
  /* Background animations */
  @keyframes steam-rise {
    0% { transform: translateY(0) scale(1); opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { transform: translateY(-60px) scale(0.8); opacity: 0; }
  }

  @keyframes float-bean {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(120deg); }
    66% { transform: translateY(10px) rotate(240deg); }
  }

  .steam-line {
    position: absolute;
    width: 3px;
    height: 40px;
    background: linear-gradient(180deg, var(--pencil) 0%, transparent 100%);
    border-radius: 50%;
    animation: steam-rise 4s ease-in-out infinite;
  }

  .steam-1 { top: 20%; left: 20%; animation-delay: 0s; }
  .steam-2 { top: 40%; right: 25%; animation-delay: 1s; }
  .steam-3 { bottom: 30%; left: 30%; animation-delay: 2s; }
  .steam-4 { top: 60%; right: 15%; animation-delay: 3s; }

  .floating-bean {
    position: absolute;
    width: 20px;
    height: 20px;
    background: var(--pencil);
    border-radius: 50%;
    animation: float-bean 8s ease-in-out infinite;
  }

  .bean-1 { top: 15%; left: 80%; animation-delay: 0s; }
  .bean-2 { bottom: 25%; right: 70%; animation-delay: 3s; }
  .bean-3 { top: 70%; left: 10%; animation-delay: 6s; }

  /* Coffee card styling */
  .coffee-card {
    background: linear-gradient(135deg, var(--coffee-800) 0%, var(--coffee-700) 100%);
    border-radius: 20px;
    padding: 32px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(212, 148, 58, 0.2);
    position: relative;
    overflow: hidden;
  }

  .coffee-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 30%, rgba(212, 148, 58, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .special-card {
    background: linear-gradient(135deg, var(--pencil) 0%, #b8811a 100%);
    border: 2px solid rgba(255, 255, 255, 0.1);
    animation: gentle-glow 3s ease-in-out infinite;
  }

  @keyframes gentle-glow {
    0%, 100% { box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 20px rgba(212, 148, 58, 0.2); }
    50% { box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4), 0 0 30px rgba(212, 148, 58, 0.4); }
  }

  .card-header {
    text-align: center;
    margin-bottom: 24px;
  }

  .form-icon {
    width: 50px;
    height: 50px;
    background: var(--pencil);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 16px;
    color: white;
    box-shadow: 0 8px 20px rgba(212, 148, 58, 0.3);
  }

  .coffee-cup-floating {
    animation: float-cup 3s ease-in-out infinite;
  }

  @keyframes float-cup {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  /* Form styling */
  .form-group {
    position: relative;
  }

  .form-label {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--cream);
  }

  .input-container {
    position: relative;
  }

  .form-input {
    width: 100%;
    padding: 16px 20px 16px 50px;
    border-radius: 12px;
    border: 2px solid rgba(212, 148, 58, 0.2);
    background: rgba(0, 0, 0, 0.1);
    color: var(--cream);
    font-size: 1rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--pencil);
    box-shadow: 0 0 0 3px rgba(212, 148, 58, 0.1);
    background: rgba(0, 0, 0, 0.15);
  }

  .form-input::placeholder {
    color: rgba(248, 244, 240, 0.6);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--pencil);
    pointer-events: none;
  }

  .textarea-icon {
    top: 20px;
    transform: none;
  }

  /* Submit button */
  .submit-btn {
    width: 100%;
    padding: 16px 24px;
    background: linear-gradient(135deg, var(--pencil) 0%, #b8811a 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-weight: 600;
