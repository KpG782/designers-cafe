<section class="py-20 bg-white" id="contact">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold mb-6" style="color: var(--coffee-900);">
        Get in <span class="text-gradient">Touch</span>
      </h2>
      <p class="text-lg max-w-2xl mx-auto mb-8" style="color: var(--coffee-600);">
        Have questions, feedback, or want to collaborate? We'd love to hear from you! 
        Reach out and let's brew something amazing together.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
      <!-- Contact Form -->
      <div class="contact-form" style="opacity: 1;">
        <h3 class="text-2xl font-serif font-bold mb-6" style="color: var(--coffee-900);">Send us a Message</h3>
        <form class="space-y-6" action="#" method="POST" role="form" aria-label="Contact form">
          <div>
            <label for="name" class="block text-sm font-semibold mb-2" style="color: var(--coffee-700);">Full Name *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 rounded-lg border-2 focus:outline-none focus:ring-2 focus:ring-[var(--pencil)] focus:border-[var(--pencil)] transition-all"
              style="border-color: var(--coffee-200); background: var(--cream);"
              placeholder="Your full name"
              aria-required="true"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-semibold mb-2" style="color: var(--coffee-700);">Email Address *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 rounded-lg border-2 focus:outline-none focus:ring-2 focus:ring-[var(--pencil)] focus:border-[var(--pencil)] transition-all"
              style="border-color: var(--coffee-200); background: var(--cream);"
              placeholder="your.email@example.com"
              aria-required="true"
            />
          </div>
          <div>
            <label for="phone" class="block text-sm font-semibold mb-2" style="color: var(--coffee-700);">Phone Number</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              class="w-full px-4 py-3 rounded-lg border-2 focus:outline-none focus:ring-2 focus:ring-[var(--pencil)] focus:border-[var(--pencil)] transition-all"
              style="border-color: var(--coffee-200); background: var(--cream);"
              placeholder="+63 XXX XXX XXXX"
            />
          </div>
          <div>
            <label for="subject" class="block text-sm font-semibold mb-2" style="color: var(--coffee-700);">Subject *</label>
            <select 
              id="subject" 
              name="subject" 
              required
              class="w-full px-4 py-3 rounded-lg border-2 focus:outline-none focus:ring-2 focus:ring-[var(--pencil)] focus:border-[var(--pencil)] transition-all"
              style="border-color: var(--coffee-200); background: var(--cream);"
              aria-required="true"
            >
              <option value="">Select a topic</option>
              <option value="general">General Inquiry</option>
              <option value="catering">Catering Services</option>
              <option value="events">Private Events</option>
              <option value="feedback">Feedback</option>
              <option value="collaboration">Collaboration</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div>
            <label for="message" class="block text-sm font-semibold mb-2" style="color: var(--coffee-700);">Message *</label>
            <textarea 
              id="message" 
              name="message" 
              required 
              rows="6"
              class="w-full px-4 py-3 rounded-lg border-2 focus:outline-none focus:ring-2 focus:ring-[var(--pencil)] focus:border-[var(--pencil)] transition-all resize-y"
              style="border-color: var(--coffee-200); background: var(--cream);"
              placeholder="Tell us about your inquiry, ideas, or how we can help you..."
              aria-required="true"
            ></textarea>
          </div>
          <div>
            <button 
              type="submit" 
              class="w-full px-8 py-4 rounded-full font-semibold hover:bg-[var(--coffee-600)] transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-4 focus:ring-[var(--pencil)] focus:ring-opacity-50"
              style="background: var(--pencil); color: var(--cream);"
              aria-label="Send your message to Designers' Cafe"
            >
              Send Message
            </button>
          </div>
        </form>
      </div>

    <!-- Highlighted Buy Me a Coffee Section - centered and visually prominent -->
    <div class="w-full flex justify-center my-12 pt-16 border-t" style="border-color: var(--coffee-200);">
      <div class="bg-[var(--coffee-800)] rounded-2xl p-8 shadow-2xl flex flex-col items-center max-w-lg w-full contact-info bounce-container" style="background: linear-gradient(135deg, var(--coffee-800), var(--coffee-700)); border: 2px solid var(--pencil);">
        <div class="w-16 h-16 rounded-full flex items-center justify-center mb-4 bounce-heart" style="background: var(--pencil);">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M20.216 6.415l-.132-.666c-.119-.598-.388-1.163-.766-1.664a4.993 4.993 0 0 0-1.353-1.216c-.669-.414-1.418-.75-2.131-.75-.52 0-1.04.133-1.543.398-.264.14-.519.315-.766.515L12 4.352 10.475 3.031c-.247-.2-.502-.375-.766-.515A3.693 3.693 0 0 0 8.166 2c-.713 0-1.462.336-2.131.75a4.993 4.993 0 0 0-1.353 1.216 4.036 4.036 0 0 0-.766 1.664l-.132.666C3.629 7.51 3.5 8.621 3.5 9.77c0 4.247 2.28 7.311 4.575 9.355 1.324 1.179 2.735 2.128 3.925 2.875 1.19-.747 2.601-1.696 3.925-2.875C18.22 17.081 20.5 14.017 20.5 9.77c0-1.149-.129-2.26-.284-3.355z"/>
          </svg>
        </div>
        <span class="text-2xl font-bold mb-3" style="color: var(--pencil); font-family: var(--font-serif);">Like this website?</span>
        <p class="text-base text-center mb-4" style="color: var(--cream); font-family: var(--font-sans); line-height: 1.6;">
          This website was lovingly crafted by a passionate developer.<br>
          Support the creator and buy a coffee!
        </p>
        <a href="https://buymeacoffee.com/Loki123" target="_blank" rel="noopener" class="inline-block px-8 py-4 rounded-full font-semibold hover:scale-105 transition-all duration-300 shadow-2xl text-lg focus:outline-none focus:ring-4 focus:ring-[var(--pencil)] focus:ring-opacity-50" style="background: var(--pencil); color: var(--coffee-900); font-family: var(--font-sans);" aria-label="Support the website creator by buying them a coffee">
          ☕ Buy Me a Coffee
        </a>
        <p class="text-sm mt-3 text-center" style="color: var(--coffee-200); font-family: var(--font-sans);">
          Every coffee helps fuel more amazing projects! ✨
        </p>
      </div>
      </div>
    </div>

</div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from { opacity: 0; transform: translateY(32px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .contact-form, .contact-info {
    animation: fade-in-up 0.8s cubic-bezier(.4,0,.2,1) both;
  }
  
  .contact-info {
    animation-delay: 0.2s;
  }

  /* Form styles */
  input:focus, select:focus, textarea:focus {
    box-shadow: 0 0 0 3px rgba(212, 148, 58, 0.1);
  }
  
  input::placeholder, textarea::placeholder {
    color: var(--coffee-400);
  }

  /* Continuous bouncing animations */
  @keyframes bounce-heart {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) scale(1);
    }
    40% {
      transform: translateY(-10px) scale(1.1);
    }
    60% {
      transform: translateY(-5px) scale(1.05);
    }
  }

  @keyframes gentle-bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 20px rgba(212, 148, 58, 0.3);
    }
    50% {
      box-shadow: 0 0 30px rgba(212, 148, 58, 0.6), 0 0 40px rgba(212, 148, 58, 0.2);
    }
  }

  .bounce-heart {
    animation: bounce-heart 2s infinite ease-in-out;
  }

  .bounce-container {
    animation: gentle-bounce 3s infinite ease-in-out, pulse-glow 4s infinite ease-in-out;
  }

  .bounce-container:hover {
    animation-play-state: paused;
  }
</style>

<script>
  // GSAP animations will be handled by main.js
  // This ensures consistency and better performance
</script>