<script>
  window.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('contact');
    let animated = false;

    function animateContactSection() {
      if (animated) return;
      
      // Header animation
      const header = document.querySelector('.contact-header');
      if (header) {
        setTimeout(() => {
          header.style.opacity = '1';
          header.classList.add('animate-fadeInUp');
        }, 100);
      }
      
      // Buy Coffee Highlight - animate first and prominently
      const buyCoffeeHighlight = document.querySelector('.buy-coffee-highlight');
      if (buyCoffeeHighlight) {
        setTimeout(() => {
          buyCoffeeHighlight.style.opacity = '1';
          buyCoffeeHighlight.classList.add('animate-fadeInScale');
        }, 300);
      }
      
      // Form animation
      const form = document.querySelector('.contact-form');
      if (form) {
        setTimeout(() => {
          form.style.opacity = '1';
          form.classList.add('animate-fadeInLeft');
        }, 600);
      }
      
      // Form groups staggered animation
      const formGroups = document.querySelectorAll('.form-group');
      formGroups.forEach((group, index) => {
        setTimeout(() => {
          group.style.opacity = '1';
          group.classList.add('animate-fadeInUp');
        }, 500 + (index * 100));
      });
      
      // Contact info animation
      const contactInfo = document.querySelector('.contact-info');
      if (contactInfo) {
        setTimeout(() => {
          contactInfo.style.opacity = '1';
          contactInfo.classList.add('animate-fadeInRight');
        }, 600);
      }
      
      // Contact items staggered animation
      const contactItems = document.querySelectorAll('.contact-item');
      contactItems.forEach((item, index) => {
        setTimeout(() => {
          item.style.opacity = '1';
          item.classList.add('animate-fadeInUp');
        }, 800 + (index * 100));
      });
      
      // Social section animation
      const socialSection = document.querySelector('.social-section');
      if (socialSection) {
        setTimeout(() => {
          socialSection.style.opacity = '1';
          socialSection.classList.add('animate-fadeInScale');
        }, 1200);
      }
      
      // QR feedback section animation
      const qrSection = document.querySelector('.qr-feedback-section');
      if (qrSection) {
        setTimeout(() => {
          qrSection.style.opacity = '1';
          qrSection.classList.add('animate-fadeInScale');
        }, 900);
      }
      
      // Buy coffee section animation
      const buyCoffeeSection = document.querySelector('.buy-coffee-section');
      if (buyCoffeeSection) {
        setTimeout(() => {
          buyCoffeeSection.style.opacity = '1';
          buyCoffeeSection.classList.add('animate-fadeInScale');
        }, 1000);
      }
      
      animated = true;
    }

    // Intersection Observer for scroll animation
    if (section) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            animateContactSection();
            observer.disconnect();
          }
        });
      }, { threshold: 0.2 });
      
      observer.observe(section);
    }

    // Form interaction enhancements
    const form = document.getElementById('contact-form');
    const submitBtn = form?.querySelector('.submit-btn');
    
    if (form && submitBtn) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Show loading state
        const btnText = submitBtn.querySelector('.btn-text');
        const btnIcon = submitBtn.querySelector('.btn-icon');
        const btnLoading = submitBtn.querySelector('.btn-loading');
        
        if (btnText && btnIcon && btnLoading) {
          btnText.style.display = 'none';
          btnIcon.style.display = 'none';
          btnLoading.style.display = 'block';
          submitBtn.disabled = true;
        }
        
        // Simulate form submission (replace with actual form handling)
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // Reset button state
        if (btnText && btnIcon && btnLoading) {
          btnText.style.display = 'block';
          btnIcon.style.display = 'block';
          btnLoading.style.display = 'none';
          submitBtn.disabled = false;
          
          // Show success feedback
          submitBtn.style.background = 'linear-gradient(135deg, #22c55e 0%, #16a34a 100%)';
          btnText.textContent = 'Message Sent!';
          
          setTimeout(() => {
            submitBtn.style.background = 'linear-gradient(135deg, var(--pencil) 0%, #b8811a 100%)';
            btnText.textContent = 'Send Message';
          }, 3000);
        }
      });
    }

    // Input focus animations
    const inputs = document.querySelectorAll('.form-input');
    inputs.forEach(input => {
      input.addEventListener('focus', () => {
        const container = input.closest('.input-container');
        if (container) {
          container.style.transform = 'translateY(-2px)';
        }
      });
      
      input.addEventListener('blur', () => {
        const container = input.closest('.input-container');
        if (container) {
          container.style.transform = 'translateY(0)';
        }
      });
    });
  });
</script>