---

<section class="py-20 bg-cream relative overflow-hidden" id="menu">
  <div class="absolute inset-0 opacity-5 pointer-events-none">
    <div class="grid grid-cols-8 gap-4 h-full">
      <div class="bg-pencil"></div>
      <div class="bg-coffee-400"></div>
      <div class="bg-pencil"></div>
      <div class="bg-coffee-400"></div>
      <div class="bg-pencil"></div>
      <div class="bg-coffee-400"></div>
      <div class="bg-pencil"></div>
      <div class="bg-coffee-400"></div>
    </div>
  </div>
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-coffee-900 mb-6">
        Our <span class="text-gradient">Signature</span> Creations
      </h2>
      <p class="text-lg text-coffee-600 max-w-2xl mx-auto">
        Each drink is crafted with the precision of a designer and the passion of an artist. 
        Explore our curated collection of coffee perfection.
      </p>
    </div>
    <!-- Menu Categories -->
    <div class="flex flex-wrap justify-center gap-4 mb-12" id="menu-categories">
      {categories.map(cat => (
        <button
          class={`category-btn px-6 py-3 rounded-full font-medium transition-all duration-300 ${selectedCategory === cat.key ? cat.color + " ring-2 ring-pencil" : "glass-morphism text-coffee-700 hover:bg-pencil hover:text-white"}`}
          data-category={cat.key}
          aria-pressed={selectedCategory === cat.key}
          onClick={() => { selectedCategory = cat.key; }}
          type="button"
        >
          {cat.name}
        </button>
      ))}
    </div>
    <!-- Category Description -->
    <div class="text-center mb-8">
      <p class="text-base md:text-lg text-coffee-700 font-medium transition-all duration-300 min-h-[1.5em]">
        {categories.find(cat => cat.key === selectedCategory)?.desc}
      </p>
    </div>
    <!-- Menu Items Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="menu-items">
      {categories
        .filter(cat => cat.key === selectedCategory)
        .map(cat =>
          cat.items.map(item => (
            <div class={`menu-item ${cat.key} glass-morphism rounded-2xl p-6 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2`}>
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-bold text-coffee-900">{item.name}</h3>
                <span class="text-2xl font-bold text-pencil">₱{item.price}</span>
              </div>
              <div class="mb-4 flex justify-center">
                <img src={cat.image} alt={cat.name + " placeholder"} class="w-24 h-24 object-cover rounded-xl border-2 border-coffee-100" />
              </div>
              <p class="text-coffee-700 text-sm mb-4">{item.desc}</p>
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex text-yellow-500 text-sm">
                    <span>★★★★★</span>
                  </div>
                  <span class="text-coffee-500 text-sm ml-2">(sample reviews)</span>
                </div>
                <button class="add-to-cart bg-pencil text-white px-4 py-2 rounded-full hover:bg-coffee-600 transition-colors">
                  Add to Cart
                </button>
              </div>
            </div>
          ))
        )
      }
    </div>
    <div class="text-center mt-12">
      <button class="view-full-menu bg-transparent border-2 border-pencil text-pencil px-8 py-4 rounded-full font-semibold hover:bg-pencil hover:text-white transition-all duration-300 transform hover:scale-105">
        View Full Menu
      </button>
    </div>
  </div>
</section>
