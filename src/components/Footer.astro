<style>
  /* Background animations */
  @keyframes coffee-pattern {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  @keyframes steam-rise {
    0% { transform: translateY(0) scale(1); opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { transform: translateY(-50px) scale(0.8); opacity: 0; }
  }

  .coffee-pattern {
    background-image: 
      radial-gradient(circle at 25% 25%, rgba(212, 148, 58, 0.1) 2px, transparent 2px),
      radial-gradient(circle at 75% 75%, rgba(212, 148, 58, 0.1) 2px, transparent 2px);
    background-size: 60px 60px, 80px 80px;
    animation: coffee-pattern 15s ease-in-out infinite;
  }

  .steam-line {
    position: absolute;
    width: 3px;
    height: 40px;
