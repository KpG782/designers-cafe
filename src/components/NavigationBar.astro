<nav class="fixed top-0 left-0 right-0 z-40 transition-all duration-300 shadow"
     id="navbar"
     role="navigation"
     aria-label="Main Navigation"
     style="background: var(--cream, #F8F4F0); backdrop-filter: blur(12px);">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo section - responsive alignment with scroll functionality -->
      <a href="#hero" class="flex items-center space-x-2 mobile-logo-center logo-link cursor-pointer focus:outline-none focus:ring-2 focus:ring-[var(--pencil)] focus:ring-offset-2 focus:rounded" aria-label="Go to top of page">
        <div class="w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center animate-fade-in flex-shrink-0">
          <img 
            src="/assets/logo.png" 
            alt="Designers' Cafe Logo" 
