---
const mapEmbedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3861.984464826342!2d121.05726111101508!3d14.542881085878033!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397c9c9d8589a75%3A0xfbec94a98dc36ea9!2sDesigners&#39;%20Cafe!5e0!3m2!1sen!2sph!4v1756671883218!5m2!1sen!2sph";
---

<section class="py-16 md:py-20" id="location" style="background: var(--coffee-900); color: var(--cream);">
  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-10 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-serif font-bold mb-4" style="color: var(--cream);">
        Visit Our <span style="color: var(--pencil);">Creative Hub</span>
      </h2>
      <p class="text-base md:text-lg max-w-xl mx-auto mb-6" style="color: var(--coffee-100);">
        Located in Pembo, Taguig. Enjoy specialty drinks, creative workspace, and friendly staff.
      </p>
    </div>
    <div class="flex flex-col md:flex-row gap-8 justify-center items-start mb-10">
      <div class="location-content bg-[var(--coffee-800)] rounded-xl p-6 shadow-lg w-full md:w-1/2" style="opacity:0;">
        <div class="mb-4 flex items-center gap-3">
          <span class="inline-block w-8 h-8 bg-pencil rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
          </span>
          <span class="font-semibold text-lg" style="color: var(--pencil);">Address</span>
        </div>
        <p class="text-base mb-4" style="color: var(--cream);">
          65 Sampaguita St. Corner Umbel<br />Brgy. Pembo, Taguig City
        </p>
        <div class="mb-4 flex items-center gap-3">
          <span class="inline-block w-8 h-8 bg-pencil rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
          </span>
          <span class="font-semibold text-lg" style="color: var(--pencil);">Call Us</span>
        </div>
        <p class="text-base mb-4" style="color: var(--cream);">0961 523 5176</p>
        <div class="mb-4 flex items-center gap-3">
          <span class="inline-block w-8 h-8 bg-pencil rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
          </span>
          <span class="font-semibold text-lg" style="color: var(--pencil);">Email</span>
        </div>
        <p class="text-base mb-4" style="color: var(--cream);">designerscafeshop@gmail.com</p>
        <div class="grid grid-cols-2 gap-4 text-sm mt-6">
          <div>
            <span style="color: var(--pencil); font-weight:600;">Radius:</span>
            <span style="color: var(--cream);">2km</span>
          </div>
          <div>
            <span style="color: var(--pencil); font-weight:600;">Fee:</span>
            <span style="color: var(--cream);">₱50</span>
          </div>
          <div>
            <span style="color: var(--pencil); font-weight:600;">Time:</span>
            <span style="color: var(--cream);">30min max</span>
          </div>
          <div>
            <span style="color: var(--pencil); font-weight:600;">Pickup:</span>
            <span style="color: var(--cream);">5min prep</span>
          </div>
        </div>
      </div>
      <div class="hours-content bg-[var(--coffee-800)] rounded-xl p-6 shadow-lg w-full md:w-1/2 flex flex-col items-center" style="opacity:0;">
        <h3 class="text-lg font-semibold mb-4" style="color: var(--pencil);">Opening Hours</h3>
        <ul class="text-base mb-4" style="color: var(--cream);">
          <li>Sun-Thu: <span style="color: var(--pencil); font-weight:600;">3:00 PM - 11:00 PM</span></li>
          <li>Friday: <span style="color: #f87171; font-weight:600;">Closed</span></li>
        </ul>
        <div class="mt-2 text-center">
          <span class="inline-flex items-center bg-green-500 bg-opacity-20 text-green-400 px-4 py-2 rounded-full font-medium">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
            Currently Open
          </span>
        </div>
        <div class="w-full mt-8 rounded-xl overflow-hidden shadow-lg bg-[var(--coffee-900)] p-2">
          <h4 class="text-base font-semibold mb-2" style="color: var(--pencil);">Find Us on the Map</h4>
          <iframe
            src={mapEmbedUrl}
            width="100%"
            height="180"
            style="border:0; border-radius: 0.75rem;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Designers' Cafe Location Map"
          ></iframe>
          <a href="https://www.google.com/maps/dir/14.7161088,121.126912/14.5424662,121.05978/@14.6293736,121.0124593,12z/data=!3m1!4b1!4m4!4m3!1m1!4e1!1m0?authuser=2&entry=ttu&g_ep=EgoyMDI1MDgyNS4wIKXMDSoASAFQAw%3D%3D"
            target="_blank"
            class="mt-2 inline-block text-[var(--pencil)] hover:text-[var(--cream)] font-medium"
          >
            Get Directions →
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  @keyframes fade-in-left {
    from { opacity: 0; transform: translateX(-40px);}
    to { opacity: 1; transform: translateX(0);}
  }
  @keyframes fade-in-right {
    from { opacity: 0; transform: translateX(40px);}
    to { opacity: 1; transform: translateX(0);}
  }
  .animate-fade-in-left {
    animation: fade-in-left 0.8s cubic-bezier(.4,0,.2,1) both;
  }
  .animate-fade-in-right {
    animation: fade-in-right 0.8s cubic-bezier(.4,0,.2,1) both;
  }
</style>
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const locationContent = document.querySelector('.location-content');
    const hoursContent = document.querySelector('.hours-content');
    let animated = false;

    function animateLocation() {
      if (animated) return;
      locationContent?.classList.add('animate-fade-in-left');
      hoursContent?.classList.add('animate-fade-in-right');
      locationContent.style.opacity = 1;
      hoursContent.style.opacity = 1;
      animated = true;
    }

    function handleIntersect(entries, observer) {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateLocation();
          observer.disconnect();
        }
      });
    }

    const locationSection = document.getElementById('location');
    if (locationSection) {
      const observer = new window.IntersectionObserver(handleIntersect, {
        threshold: 0.2
      });
      observer.observe(locationSection);
    }
  });
</script>
