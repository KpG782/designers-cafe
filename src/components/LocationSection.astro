  /* Screen reader only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .coffee-card {
      padding: 24px;
    }
    
    .contact-item {
      padding: 16px;
    }
    
    .map-wrapper {
      height: 200px;
    }
    
    .hours-today {
      flex-direction: column;
      gap: 8px;
      text-align: center;
    }
    
    .map-actions {
      flex-direction: column;
