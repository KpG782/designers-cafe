  /* Animation classes */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .animate-fadeInLeft {
    animation: fadeInLeft 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .animate-fadeInRight {
    animation: fadeInRight 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .animate-fadeInScale {
    animation: fadeInScale 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
</style>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const section = document.getElementById('location');
    let animated = false;

    function animateLocationSection() {
      if (animated) return;
      
      // Header animation
      const header = document.querySelector('.location-header') as HTMLElement;
      if (header) {
        setTimeout(() => {
          header.style.opacity = '1';
          header.classList.add('animate-fadeInUp');
        }, 100);
      }
      
      // Left card (contact info) animation
      const locationContent = document.querySelector('.location-content') as HTMLElement;
      if (locationContent) {
        setTimeout(() => {
          locationContent.style.opacity = '1';
          locationContent.classList.add('animate-fadeInLeft');
        }, 300);
      }
      
      // Contact items staggered animation
      const contactItems = document.querySelectorAll('.contact-item');
      contactItems.forEach((item, index) => {
        setTimeout(() => {
          (item as HTMLElement).style.opacity = '1';
          item.classList.add('animate-fadeInUp');
        }, 500 + (index * 150));
      });
      
      // Social section animation
      const socialSection = document.querySelector('.social-section') as HTMLElement;
      if (socialSection) {
        setTimeout(() => {
          socialSection.style.opacity = '1';
          socialSection.classList.add('animate-fadeInScale');
        }, 1000);
      }
      
      // Right card (map) animation
      const hoursContent = document.querySelector('.hours-content') as HTMLElement;
      if (hoursContent) {
        setTimeout(() => {
          hoursContent.style.opacity = '1';
          hoursContent.classList.add('animate-fadeInRight');
        }, 600);
      }
      
      // Quick hours animation
      const quickHours = document.querySelector('.quick-hours') as HTMLElement;
      if (quickHours) {
        setTimeout(() => {
          quickHours.style.opacity = '1';
          quickHours.classList.add('animate-fadeInUp');
        }, 800);
      }
      
      // Map container animation
      const mapContainer = document.querySelector('.map-container') as HTMLElement;
      if (mapContainer) {
        setTimeout(() => {
          mapContainer.style.opacity = '1';
          mapContainer.classList.add('animate-fadeInScale');
        }, 1000);
      }
      
      animated = true;
    }

    // Intersection Observer for scroll animation
    if (section) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            animateLocationSection();
            observer.disconnect();
          }
        });
      }, { threshold: 0.2 });
      
      observer.observe(section);
    }

    // Share location functionality
    (window as any).shareLocation = function() {
      if (navigator.share) {
        navigator.share({
          title: "Designers' Cafe Location",
          text: "Check out this amazing coffee shop in Pembo, Taguig!",
          url: "https://www.google.com/maps/place/Designers'+Cafe/@14.5424662,121.05978,17z"
        }).catch(console.error);
      } else {
        // Fallback for browsers that don't support Web Share API
        const url = "https://www.google.com/maps/place/Designers'+Cafe/@14.5424662,121.05978,17z";
        navigator.clipboard.writeText(url).then(() => {
          alert('Location link copied to clipboard!');
        }).catch(() => {
          // Fallback if clipboard API fails
          const textArea = document.createElement('textarea');
          textArea.value = url;
          document.body.appendChild(textArea);
          textArea.select();
          document.execCommand('copy');
          document.body.removeChild(textArea);
          alert('Location link copied to clipboard!');
        });
      }
    };
  });
</script>
