---
const bgImage = "/public/assets/midnightbg.jpg"; // adjust path if needed
---

<section
  class="min-h-screen flex items-center justify-center relative overflow-hidden pt-20"
  id="hero"
  aria-label="Designers' Cafe Hero Section"
  style={`background: url('${bgImage}') center center / cover no-repeat;`}
>

  <!-- Background Elements -->
  <div class="absolute inset-0 opacity-10 z-10">
    <div class="absolute top-20 left-10 w-32 h-32 bg-pencil rounded-full animate-float" style="animation-delay: 0s;"></div>
    <div class="absolute bottom-32 right-20 w-24 h-24 bg-coffee-400 rounded-full animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-coffee-600 rounded-full animate-float" style="animation-delay: 4s;"></div>
  </div>
  
  <div class="container mx-auto px-6 text-center relative z-20">
    <div class="max-w-4xl mx-auto">
      <!-- Animated tagline -->
      <p class="text-pencil font-medium mb-4 opacity-0" id="tagline">Where creativity meets caffeine</p>
      
      <!-- Main heading with split text animation -->
      <h1 class="text-5xl md:text-7xl font-serif font-bold text-white mb-6 drop-shadow-lg">
        <span class="block" id="hero-text-1">Brewing</span>
        <span class="block text-gradient" id="hero-text-2" style="color: #FFD580;">Connections</span>
        <span class="block text-sm md:text-lg font-sans font-normal mt-4 text-white" id="hero-text-3">One cup at a time</span>
      </h1>
      
      <p class="text-lg md:text-xl text-white max-w-2xl mx-auto mb-8 opacity-0 drop-shadow" id="hero-description">
        Experience the perfect blend of creativity and coffee at Designers' Cafe. 
        Where every sip fuels inspiration and every moment sparks connections.
      </p>
      
      <!-- CTA Buttons with stagger animation -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center opacity-0" id="hero-buttons">
        <button class="cta-primary bg-pencil text-white px-8 py-4 rounded-full font-semibold hover:bg-coffee-600 transition-all duration-300 transform hover:scale-105 animate-pulse-glow focus:outline-none focus:ring-4 focus:ring-pencil focus:ring-opacity-50">
          Explore Menu
        </button>
        <button class="cta-secondary border-2 border-pencil text-pencil px-8 py-4 rounded-full font-semibold hover:bg-pencil hover:text-white transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-pencil focus:ring-opacity-50">
          Visit Us Today
        </button>
      </div>
      
      <!-- Hours indicator -->
      <div class="mt-12 opacity-0" id="hours-indicator">
        <div class="inline-flex items-center glass-morphism px-6 py-3 rounded-full">
          <div class="w-3 h-3 bg-green-500 rounded-full mr-3 animate-pulse"></div>
          <span class="text-white font-medium">Open Today: 3:00 PM - 11:00 PM</span>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 opacity-0 z-20" id="scroll-indicator">
    <div class="flex flex-col items-center">
      <span class="text-white text-sm mb-2 drop-shadow">Scroll to explore</span>
      <div class="w-6 h-10 border-2 border-coffee-400 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-coffee-400 rounded-full mt-2 animate-bounce"></div>
      </div>
    </div>
  </div>
</section>